extends ./layout.jade
block content 
  .container
    if projects
      each lang in projects
        each project, index in lang
          if index === 0
            .row
              .col-md-12
                h1 #{project.language}
              .col-md-12
                include ../partials/projects/_project.jade
          else if index % 2 === 0
            .row
              .col-md-6
                include ../partials/projects/_project.jade
          else
              .col-md-6
                include ../partials/projects/_project.jade

          
